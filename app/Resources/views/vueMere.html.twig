<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Hego Berria{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css"/>
            <link rel="stylesheet" href="{{ asset('css/fixed-footer.css') }}"/>
            <style>
                .navbar .container-fluid, .navbar-collapse {
                    padding-left:0;
                }
                .navbar-collapse.in {
                    padding-left:30px;
                }
            </style>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('images/temporaire/iutBayonne.ico') }}" />
    </head>
    
    <body>
        <div id="wrap">
            <div id="main" class="container clear-top">
                {% block header %}
                    <div class="jumbotron" style="position: relative;
                                                  background: url({{ asset('images/temporaire/girl.jpg') }}) center center;
                                                  width: 100%;
                                                  height: 100%;
                                                  background-size: cover;
                                                  overflow: hidden;">
                        <div class="container">
                            <h1 class="text-center">Hego Berria</h1>
                        </div>
                    </div>
                {% endblock %}
                
                {% block navbar %}
                {% endblock %}
                
                {% block contenu %}
                {% endblock %}
            </div>
        </div>
        
        {% block footer %}
            <footer class="footer">
                <div class="container">
                    <p class="text-center text-muted"><a href="{{ path('mentions_legales') }}">Mentions l√©gales</a> - <a href="{{ path('contact') }}">Nous contacter</a></p>
                </div>
            </footer>
        {% endblock %}
        
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery.js')}}"></script>
            <script type="text/javascript" src="{{ asset('js/bootstrap.js')}}"></script>
        {% endblock %}
    </body>
</html>
