{% extends 'sitebdeSiteVitrineBundle::vueMereSiteVitrine.html.twig' %}


{% block boutonActualite %}
    <li class="active"><a href="{{ path('sitebde_siteVitrine_listeActualites') }}"><span class="sr-only">(current)</span>Actualités</a></li>
{% endblock %}


{% block contenu %}
    <div class="row">
        <div class="col-sm-12">
            <form action="{{ path('sitebde_siteVitrine_ajouterActualite') }}">
                <center>
                    <button class="btn btn-primary" type="submit">
                        <h5>Ajouter une actualité</h5>
                    </button>
                </center>
            </form>
        </div>
    </div>
    <div class="row top-buffer">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div class="list-group">
                {% for actuCourante in actualites %}
                    <a href="{{ path('sitebde_siteVitrine_detailsActualite', {'idActu':actuCourante.id}) }}" class="list-group-item">
                        <div class="row">
                            <div class="col-sm-3">
                                <img src="{{ asset('images/iconesActualites/' ~ actuCourante.icone) }}" alt="Logo" class="img-rounded img-responsive">
                            </div>
                            <div class="col-sm-9">
                                <h4 class="list-group-item-heading">{{ actuCourante.titre }}</h4>
                                {% if actuCourante.datePublication != actuCourante.dateActualisation %}
                                    <p><small>Date d'actualisation : {{ actuCourante.dateActualisation|date("d/m/Y") }}
                                     - Date de publication : {{ actuCourante.datePublication|date("d/m/Y") }}</small></p>
                                {% else %}
                                    <p><small>Date de publication : {{ actuCourante.datePublication|date("d/m/Y") }}</small></p>
                                {% endif %}
                                <p>{{ actuCourante.contenu|length > 200 ? actuCourante.contenu|slice(0, 200) ~ '...' : actuCourante.contenu }}</p>
                            </div>
                        </div>
                    </a>
                {% else %}
                    <p>Il n'y a rien.</p>
                {% endfor %}
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
{% endblock %}
