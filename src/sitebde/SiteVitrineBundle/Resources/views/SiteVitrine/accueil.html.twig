{% extends 'vueMere.html.twig' %}

{% block navbar %}
    <div class="row">
        <div class="col-sm-1">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="{{ path('sitebde_siteVitrine_accueil') }}">Site<span class="sr-only">(current)</span></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-sm-10">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="{{ path('sitebde_siteVitrine_accueil') }}"><span class="glyphicon glyphicon-home" aria-hidden="true"></span><span class="sr-only">(current)</span></a></li>
                            <li><a href="{{ path('sitebde_siteVitrine_listeActualites') }}">Actualités</a></li>
                            <li><a href="{{ path('sitebde_siteVitrine_listeEvenements') }}">Evènements</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Informations <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    {% for infoCourante in informations %}
                                        <li><a href="{{ path('sitebde_siteVitrine_information', {'idInfo':infoCourante.id}) }}">Là c'est l'info {{ infoCourant.id }} !</a></li>
                                    {% else %}
                                        <li><a href="#">Il n'y a aucune information ;o;</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                        </ul>
                        <form class="navbar-form navbar-right">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Chercher">
                            </div>
                            <button type="submit" class="btn btn-default">Go !</button>
                        </form>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="{{ path('sitebde_siteVitrine_connexion') }}">Se connecter</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-sm-1">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="#">Parrainage</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
{% endblock %}

{% block contenu %}
    <div class="row">
        <div class="col-sm-9">
            <h1>Hego Berria</h1>
            <p>Bienvenue sur la page d'accueil !</p>
            <p>Je ne sais pas quoi y écrire °^°</p>
        </div>
        <div class="col-sm-3">
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Dernières actualités</h3>
                    </div>
                    <div class="list-group">
                        {% for actuCourante in actualites %}
                            <a href="{{ path('sitebde_siteVitrine_detailsActualite', {'idActu':actuCourante.id}) }}" class="list-group-item">Là c'est l'actu {{ actuCourante.id }} !</a>
                        {% else %}
                            <p>Il n'y a aucune actualité ;o;</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Evènements à venir</h3>
                    </div>
                    <div class="list-group">
                        {% for evenementCourant in evenements %}
                            <a href="{{ path('sitebde_siteVitrine_detailsEvenement', {'idEvent':evenementCourant.id}) }}" class="list-group-item">Là c'est l'évènement {{ evenementCourant.id }} !</a>
                        {% else %}
                            <p>Il n'y a aucun évènement ;o;</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
