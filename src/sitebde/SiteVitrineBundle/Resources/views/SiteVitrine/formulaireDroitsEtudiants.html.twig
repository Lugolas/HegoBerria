{% extends 'sitebdeSiteVitrineBundle::vueMereSiteVitrine.html.twig' %}

{% block contenu %}
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{ titreFormulaire }}</h4>
                </div>
                <div class="panel-body">
                    <form method="post" {{ form_enctype(formulaire) }}>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(formulaire.definitionMembresBDE) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(formulaire.definitionAdmin) }}
                            </div>
                            <!-- Afficher tous les autres champs du formulaire (y compris le token caché et nécessaire) -->
                            {{ form_rest(formulaire) }}
                        </div>
                        <div>
                            <center><input type="submit" class="btn btn-success" value="Enregistrer" /></center>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}