{% extends '::vueMere.html.twig' %}


{% block header %}
<a href="{{path('sitebde_parrainage_accueil') }}" style="text-decoration: none">
    <div class="jumbotron" style="position: relative;
                                  background: url({{ asset('images/parrainageBanniere.jpg') }}) center center;
                                  width: 100%;
                                  height: 100%;
                                  background-size: cover;
                                  overflow: hidden;">
            <h1 class="text-right">&#160</h1> <!-- https://www.facebook.com/hegoberria/photos/a.1711801005720737.1073741827.1711794059054765/1715796241987880/?type=1&theater -->

    </div>
</a>
{% endblock %}

{% block navbar %}
    <div class="row">
        <div class="col-sm-10">
            <nav class="navbar navbar-inverse" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            {% block boutonAccueil %}
                                <li><a href="{{ path('sitebde_parrainage_accueil') }}"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a></li>
                            {% endblock %}
                            {% block bouton1eAnnee %}
                                <li><a href="{{ path('sitebde_parrainage_premieres_annees') }}">1° années</a></li>
                            {% endblock %}
                            {% block bouton2eAnnee %}
                                <li><a href="{{ path('sitebde_parrainage_deuxiemes_annees') }}">2° années</a></li>
                            {% endblock %}
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            {% block boutonRecherche %}
                                <li><a href="{{path('sitebde_parrainage_recherche_par_critere')}}"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a></li>
                            {% endblock %}
                            {% block boutonDemandes %}
                                <li><a href="{{ path('sitebde_parrainage_demandes') }}">Demandes</a></li>
                            {% endblock %}
                            {% block boutonProfilPerso %}
                                <li><a href="{{ path('sitebde_parrainage_profil') }}">{{ etudiantConnecte.prenom }} {{ etudiantConnecte.nom }}</a></li>
                            {% endblock %}
                            {% block boutonDeconnexion %}
                                <li><a href="{{ path('deconnexion_perso') }}"><span class="glyphicon glyphicon-off" aria-hidden="true"></span></a></li>
                            {% endblock %}
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-sm-2">
            <center>
                <form action="{{ path('sitebde_siteVitrine_accueil') }}" method="post">
                    <button type="submit" class="btn btn-info">
                        <h5><span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span> Site du BDE</h5>
                    </button>
                </form>
            </center>
        </div>
    </div>
{% endblock %}
{% block boutonMentionsLegales %}
<a href="{{ path('mentions_legales_parrainage') }}">Nous contacter - Mentions légales</a>
{% endblock %} 