{% block contenu %}
    {% for etudiantCourant in etudiant %}
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-1">
            <img src="{{ asset('images/photosEtudiants/' ~ etudiantCourant.photo) }}" class="img-rounded img-responsive">
        </div>
        <div class="col-sm-6">
            <h2 class="list-group-item-heading">{{ etudiantCourant.prenom }} {{ etudiantCourant.nom }}</h2>
            {% if etudiantCourant.numAnnee == "1" %}
                <p>1° année</p>
            {% else %}
                <p>2° année</p>
            {% endif %}
            <h4>{{ etudiantCourant.description }}</h4>
        </div>
        <div class="col-sm-4">
            <button type="button" class="btn btn-success">
                <div class="row">
                    <div class="col-sm-2">
                        <h4><span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span></h4>
                    </div>
                    <div class="col-sm-10">
                        <h4>Demander en marriage</h4>
                    </div>
                </div>
            </button>
        </div>
    </div>
    <div class="row top-buffer">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Informations scolaires</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6" style="border-right:1px dashed #888">
                            <h4 class="text-center">Matières fortes</h4>
                            <dl class="dl-horizontal">
                                {% if etudiantCourant.matieresFortes is not empty %}
                                    {% set categoriePrecedente = "Patate" %}
                                    {% for matiereForte in etudiantCourant.matieresFortes %}
                                        {% set categorieCourante = matiereForte.categorie %}
                                        {% if categorieCourante != categoriePrecedente %}
                                            <dt>{{ matiereForte.categorie }}</dt>
                                        {% endif %}
                                        <dd>{{ matiereForte.libelle }}</dd>
                                        {% set categoriePrecedente = categorieCourante %}
                                    {% endfor %}
                                {% endif %}
                            </dl>
                        </div>
                        <div class="col-sm-6">
                            <h4 class="text-center">Matières faibles</h4>
                            <dl class="dl-horizontal">
                                {% if etudiantCourant.matieresFaibles is not empty %}
                                    {% set categoriePrecedente = "Patate" %}
                                    {% for matiereFaible in etudiantCourant.matieresFaibles %}
                                        {% set categorieCourante = matiereFaible.categorie %}
                                        {% if categorieCourante != categoriePrecedente %}
                                            <dt>{{ matiereFaible.categorie }}</dt>
                                        {% endif %}
                                        <dd>{{ matiereFaible.libelle }}</dd>
                                        {% set categoriePrecedente = categorieCourante %}
                                    {% endfor %}
                                {% endif %}
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Loisirs</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        {% if etudiantCourant.loisirs is not empty %}
                            {% set categoriePrecedente = "Patate" %}
                            {% for loisir in etudiantCourant.loisirs %}
                                {% set categorieCourante = loisir.loisir.categorie %}
                                {% if categorieCourante != categoriePrecedente %}
                                    <dt>{{ loisir.loisir.categorie }}</dt>
                                {% endif %}
                                <dd>{{ loisir.loisir.libelle }}{% if loisir.commentaire is not empty %} - <i>{{ loisir.commentaire }}</i>{% endif %}</dd>
                                {% set categoriePrecedente = categorieCourante %}
                            {% endfor %}
                        {% endif %}
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Sports</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        {% if etudiantCourant.sports is not empty %}
                            {% set categoriePrecedente = "Patate" %}
                            {% for sport in etudiantCourant.sports %}
                                {% set categorieCourante = sport.sport.categorie %}
                                {% if categorieCourante != categoriePrecedente %}
                                    <dt>{{ sport.sport.categorie }}</dt>
                                {% endif %}
                                <dd>{{ sport.sport.libelle }}{% if sport.commentaire is not empty %} - <i>{{ sport.commentaire }}</i>{% endif %}</dd>
                                {% set categoriePrecedente = categorieCourante %}
                            {% endfor %}
                        {% endif %}
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Liens</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        <li><a>Lien 1</a></li>
                        <li><a>Lien 2</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}